#!/bin/sh

if [ `uname` = 'Linux' ]; then
    ECHO='echo -e'
    prc=`uname -m`
else
    ECHO=echo
fi


$ECHO ' 64-bit integer or 32-bit integer? [64/32] \c'
read answer
if [ "$answer" = "64" ]; then
  int=int8
else
  int=int4
fi

if [ `uname` = 'Darwin' ]; then
  f77="mpif90"
  cdir=`pwd`
  if [ $int == "int8" ]; then
    fflags="-O2 -i8 -openmp -mkl"
    dpp="-DINT8"
    libs="-L/opt/scalapack -lscalapack64"
  else
    fflags="-O2 -i4 -openmp -mkl"
    dpp="-DINT4"
    libs="-L/opt/scalapack -lscalapack32"
  fi
elif [ `uname` = 'Linux' ]; then
  if [ `hostname` = 'pi' ]; then
    f77="mpifrtpx"
    cdir=`pwd`
    if [ $int == "int8" ]; then
      fflags="-O2 -Kvisimpact,openmp,cdII8 -Koptmsg=2"
      dpp="-DINT8"
      libs="-SSL2BLAMP -SCALAPACK -Kvisimpact,openmp"
    else
      fflags="-O2 -Kvisimpact,openmp -Koptmsg=2"
      dpp="-DINT4"
      libs="-SSL2BLAMP -SCALAPACK -Kvisimpact,openmp"
    fi
  else
    f77="mpiifort"
    cdir=`pwd`
    if [ $int == "int8" ]; then
      fflags="-O2 -i8 -openmp -mkl=parallel"
      dpp="-DINT8"
      libs="-L${MKLROOT}/lib/intel64 -lmkl_scalapack_ilp64 -lmkl_blacs_intelmpi_ilp64 -lpthread -lm -ldl"
    else
      fflags="-O2 -i4 -openmp -mkl=parallel"
      dpp="-DINT4"
      libs="-L${MKLROOT}/lib/intel64 -lmkl_scalapack_lp64 -lmkl_blacs_intelmpi_lp64 -lpthread -lm -ldl"
    fi
  fi
fi

cat <<EOF > Makefile.config
########################
#                      #
# MatD Makefile.config #
#                      #
########################
FC = $f77
FFLAGS = $fflags
LIBS = $libs

MATD_DIR = $cdir
MATD_LIB = \$(MATD_DIR)/lib
MATD_INCLUDE = \$(MATD_DIR)/include
CFLAGS =
DPPFLAGS = $dpp
EOF

