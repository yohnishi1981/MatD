#!/bin/sh

if [ `uname` = 'Linux' ]; then
    ECHO='echo -e'
    prc=`uname -m`
else
    ECHO=echo
fi


$ECHO ' 64-bit integer or 32-bit integer? [64/32] \c'
read answer
if [ "$answer" = "64" ]; then
  int=int8
else
  int=int4
fi

if [ `uname` = 'Darwin' ]; then
  f77="mpif90"
  cdir=`pwd`
  if [ $int == "int8" ]; then
    fflags="-O2 -i8"
    dpp="-DINT8"
    libs="-mkl -L/opt/scalapack -lscalapack64"
  else
    fflags="-O2 -i4"
    dpp="-DINT4"
    libs="-mkl -L/opt/scalapack -lscalapack32"
  fi
elif [ `uname` = 'Linux' ]; then
  f77="mpiifort"
  cdir=`pwd`
  if [ $int == "int8" ]; then
    fflags="-O2 -i8"
    dpp="-DINT8"
    libs="-mkl=cluster"
  else
    fflags="-O2 -i4"
    dpp="-DINT4"
    libs="-mkl=cluster"
  fi
fi

cat <<EOF > Makefile.config
########################
#                      #
# MatD Makefile.config #
#                      #
########################
FC = $f77
FFLAGS = $fflags
LIBS = $libs

MATD_DIR = $cdir
MATD_LIB = \$(MATD_DIR)/lib
MATD_INCLUDE = \$(MATD_DIR)/include
CFLAGS =
DPPFLAGS = $dpp
EOF

